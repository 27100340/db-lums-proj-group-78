# Database Configuration
# Fill in your SQL Server connection details below

# SQL Server instance name (examples: localhost, .\SQLEXPRESS, (localdb)\MSSQLLocalDB)
DB_SERVER=localhost

# Database name (should be ServiceConnect)
DB_NAME=ServiceConnect

# Use Windows Authentication (true) or SQL Server Authentication (false)
DB_INTEGRATED_SECURITY=false

# Only required if DB_INTEGRATED_SECURITY=false
DB_USER=sa
DB_PASSWORD=YourStrong!Passw0rd

# BLL Type: LinqEF or StoredProcedure (default: LinqEF)
BLL_TYPE=LinqEF

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
API_PORT=5000
